<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    android:layout_margin="12dp"

    >


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/top_news_width"
        android:layout_height="@dimen/top_news_height"
        android:id="@+id/iv_top_news"
        android:src="@drawable/top_news"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_top_news"
        android:text="Top News"
        android:textColor="@color/black_full"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/iv_top_news"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/iv_top_news_main"
        android:src="@drawable/img_top_news_one"
        android:scaleType="centerCrop"
        android:layout_below="@id/iv_top_news"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_top_news_main"
        android:text="Real Madrid dominate Champions League Team of 2017"
        android:layout_below="@id/iv_top_news_main"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textColor="@color/black_full"
        android:textSize="18sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_app_icon"
        android:text="  Sports News"
        android:layout_below="@id/tv_top_news_main"
        android:drawableLeft="@drawable/ic_android_black_24dp"
        android:layout_marginTop="16dp"
        android:layout_alignLeft="@id/tv_top_news_main"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background=" @color/black_full"
        android:layout_marginTop="8dp"
        android:id="@+id/v_line"
        android:layout_below="@id/tv_app_icon"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_line"
        android:id="@+id/rl_news_one">
        <ImageView
            android:layout_width="@dimen/top_news_one_width"
            android:layout_height="@dimen/top_news_one_height"
            android:id="@+id/iv_top_news_one"
            android:src="@drawable/img_top_news_one"
            android:layout_margin="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_top_news_one"
            android:text="Real Madrid dominate Champions League Team of 2017"
            android:layout_toRightOf="@id/iv_top_news_one"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_app_name"
            android:text="  Sports News"
            android:layout_toRightOf="@id/iv_top_news_one"
            android:drawableLeft="@drawable/ic_android_black_24dp"
            android:layout_marginTop="12dp"
            android:layout_below="@id/tv_top_news_one"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_full"
        android:layout_marginTop="8dp"
        android:id="@+id/v_line_1"
        android:layout_below="@id/rl_news_one"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_line_1"
        android:id="@+id/rl_news_two"
        >
        <ImageView
            android:layout_width="@dimen/top_news_one_width"
            android:layout_height="@dimen/top_news_one_height"
            android:id="@+id/iv_top_news_two"
            android:src="@drawable/img_top_news_one"
            android:layout_margin="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_top_news_two"
            android:text="Real Madrid dominate Champions League Team of 2017"
            android:layout_toRightOf="@id/iv_top_news_two"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_app_name_2"
            android:text="  Sports News"
            android:layout_toRightOf="@id/iv_top_news_two"
            android:drawableLeft="@drawable/ic_android_black_24dp"
            android:layout_marginTop="12dp"
            android:layout_below="@id/tv_top_news_two"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_full"
        android:layout_marginTop="8dp"
        android:id="@+id/v_line_2"
        android:layout_below="@id/rl_news_two"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_line_2"
        android:id="@+id/rl_news_three">
        <ImageView
            android:layout_width="@dimen/top_news_one_width"
            android:layout_height="@dimen/top_news_one_height"
            android:id="@+id/iv_top_news_three"
            android:src="@drawable/img_top_news_one"
            android:layout_margin="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_top_news_three"
            android:text="Real Madrid dominate Champions League Team of 2017"
            android:layout_toRightOf="@id/iv_top_news_three"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_app_name_3"
            android:text="  Sports News"
            android:layout_toRightOf="@id/iv_top_news_three"
            android:drawableLeft="@drawable/ic_android_black_24dp"
            android:layout_marginTop="12dp"
            android:layout_below="@id/tv_top_news_three"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_full"
        android:layout_marginTop="8dp"
        android:id="@+id/v_line_3"
        android:layout_below="@id/rl_news_three"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/v_line_3">

        <ImageView
            android:id="@+id/iv_top_news_four"
            android:layout_width="@dimen/top_news_one_width"
            android:layout_height="@dimen/top_news_one_height"
            android:layout_margin="8dp"
            android:src="@drawable/img_top_news_one" />

        <TextView
            android:id="@+id/tv_top_news_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_top_news_four"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Real Madrid dominate Champions League Team of 2017" />

        <TextView
            android:id="@+id/tv_app_name_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_top_news_four"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/iv_top_news_four"
            android:drawableLeft="@drawable/ic_android_black_24dp"
            android:text="  Sports News" />

    </RelativeLayout>





</RelativeLayout>
</android.support.v7.widget.CardView>